<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Panel administratora{% endblock %} - GAMP</title>
        <!--title>{% block description %}Strona główna{% endblock %}</title-->
        {% block stylesheets %}{% endblock %}

        <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/foundation.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/backend.css') }}" />
        <script src="{{ asset('bundles/chiavecore/js/modernizr.js') }}"></script>
        <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>

        <script type="text/javascript" src="{{ asset('ckeditor/ckeditor.js') }}"></script>

        <script src="{{ asset('bundles/chiavecore/js/foundation-datetimepicker.js') }}"></script>
        <link href="{{ asset('bundles/chiavecore/stylesheets/foundation-datepicker.css') }}" rel="stylesheet">

        {# <script src="{{ asset('bundles/chiavecore/js/vendor/jquery.js') }}"></script> #}
    <script src="{{ asset('bundles/chiavecore/js/vendor/fastclick.js') }}"></script>
    </head>
    <body>
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1><a href="#">GAMP</a></h1>
            </li>
            {# Wyświetli się dla tragicznie małych ekranów #}
            <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
        </ul>
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                <li class="has-dropdown">
                    <a href="#">Użytkownik</a>
                    <ul class="dropdown">
                        <li><a href="{{ path('logout') }}">Wyloguj</a></li>
                    </ul>
                </li>
            </ul>
        </section>
    </nav>

    <section role="main">
        <div class="row header-intro">
            <header>
                <h1>{{ block('title')}}</h1>
                <h4>{{ block('description') }}</h4>
            </header>
        </div>

        {% set active = block('active_name') %}
        <div class="row">
            <div class="medium-3 columns">
                <nav class="sidebar">
                    <ul class="side-nav">
                        <li><h6><strong>Menu boczne</strong></h6></li>
                        <li class="divider"></li>
                        <li {% if active == "cms_pages" %}class="active"{% endif %}>
                            <a href="{{ path('cms_pages') }}">Strony</a>
                        </li>
                        <li {% if active == "cms_articles" %}class="active"{% endif %}>
                            <a href="{{ path('cms_articles') }}">Wpisy</a>
                        </li>
                        {# <li><a href="#">Link 2</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Link 3</a></li>
                        <li><a href="#">Link 4</a></li> #}
                    </ul>
                </nav>
            </div>
            <div class="medium-9 columns">
                {% block body %}{% endblock %}
                {% block javascripts %}{% endblock %}
            </div>
        </div>
    </section>

    <script src="{{ asset('bundles/chiavecore/js/foundation.min.js') }}"></script>
    <script type="text/javascript">
        $(document).foundation();

        $(function() {
        });
    </script>
  </body>
</html>
