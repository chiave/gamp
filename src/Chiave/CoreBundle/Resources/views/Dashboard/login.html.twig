<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Panel administratora{% endblock %} - GAMP</title>
        {% block stylesheets %}{% endblock %}

        <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/foundation.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/chiavecore/css/backend.css') }}" />
        <script src="{{ asset('bundles/chiavecore/js/modernizr.js') }}"></script>
        <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>

    <script src="{{ asset('bundles/chiavecore/js/vendor/fastclick.js') }}"></script>
    </head>
    <body>
    <nav class="top-bar" data-topbar>
        <ul class="title-area">
            <li class="name">
                <h1><a href="#">GAMP</a></h1>
            </li>
        </ul>
    </nav>

    <section role="main">
        <div class="row header-intro">
            <header>
                <h1>Panel Administratora</h1>
                <h4>Zaloguj siÄ™</h4>
            </header>
        </div>

        {% set active = block('active_name') %}
        <div class="row login-ext">
            <div class="medium-4 columns login-int">

                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <button type="submit">login</button>
                </form>
            </div>
        </div>
    </section>

    <script src="{{ asset('bundles/chiavecore/js/foundation.min.js') }}"></script>
    <script type="text/javascript">
        $(document).foundation();
    </script>
  </body>
</html>
